<Window x:Class="NanaManager.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NanaManager"
        mc:Ignorable="d"
		d:DesignHeight="400"
		d:DesignWidth="400"
        Title="Splash" Height="300" Width="300" ResizeMode="CanMinimize" WindowStyle="None" WindowStartupLocation="CenterScreen" Background="Transparent" ContentRendered="window_ContentRendered" AllowsTransparency="True">
	<Border Background="{DynamicResource Background}" CornerRadius="20">
		<Grid>
			<Label Content="Nana Manager" Foreground="{DynamicResource LightText}" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="25" Height="100"/>
			<Label Content="Loading.." Foreground="{DynamicResource LightText}" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="20" Height="100" Margin="0,42,0,0"/>
			<ProgressBar x:Name="pgbProgress" Margin="5,0,5,80" VerticalAlignment="Bottom" Height="30"/>
		</Grid>
	</Border>
</Window>
